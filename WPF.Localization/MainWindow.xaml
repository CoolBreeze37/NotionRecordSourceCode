<Window
    x:Class="WPF.Localization.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <TextBlock d:Text="123" Text="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=[SayHello]}" />
        <Button
            Width="50"
            Height="50"
            Click="Button_Click" />
    </Grid>
</Window>
